{
    "name": "anquanpages",
    "version": "1.0.0",
    "description": "安全管理交互页面应用",
    "main": "src/pages/index.html",
    "scripts": {
        "dev": "node scripts/dev-server.js",
        "build": "node scripts/build.js",
        "preview": "echo \"构建完成，请查看dist目录\"",
        "lint": "eslint src/ --ext .js,.html --fix",
        "lint:check": "eslint src/ --ext .js,.html",
        "type-check": "node scripts/validate-env.js",
        "test": "echo \"暂无测试\" && exit 0",
        "test:unit": "jest tests/unit/",
        "test:integration": "jest tests/integration/",
        "test:e2e": "playwright test",
        "test:ci": "jest --coverage --ci --watchAll=false",
        "test:coverage": "jest --coverage",
        "setup:kv": "node scripts/setup-kv.js",
        "validate:env": "node scripts/validate-env.js",
        "deploy:check": "npm run build && echo \"构建成功，可以部署\""
    },
    "keywords": [
        "安全管理",
        "安全教育",
        "安全培训",
        "交互式学习",
        "在线测试"
    ],
    "author": "安全管理团队",
    "license": "MIT",
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "eslint": "^8.50.0",
        "jest": "^29.7.0",
        "wrangler": "^3.15.0"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/username/anquanpages.git"
    },
    "bugs": {
        "url": "https://github.com/username/anquanpages/issues"
    },
    "homepage": "https://github.com/username/anquanpages#readme"
}